# Basic options
--recurse=yes
--tag-relative=yes
--exclude=.git
--exclude=node_modules
--exclude=dist
--totals=yes

# PHP
--langmap=php:.engine.inc.module.theme.install.php
--PHP-kinds=+cf
--regex-PHP='/abstract class ([^ ]*)//c/'
--regex-PHP='/interface ([^ ]*)//c/'
--regex-PHP='/(public |static |abstract |protected |private )+function ([^ (]*)//f/'
